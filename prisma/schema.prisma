// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("PATIENT") // PATIENT, DENTIST, ADMIN
  accounts      Account[]
  sessions      Session[]
  dentistProfile DentistProfile?
  bookings      Booking[]
}

model DentistProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  specialty       String
  location        String
  rating          Float    @default(0)
  reviewCount     Int      @default(0)
  experienceYears Int
  about           String?
  education       String?
  image           String?
  degreeImage     String?
  isVerified      Boolean  @default(false)
  isPendingVerification Boolean @default(false)
  priceFrom       Int
  commissionRate  Float    @default(10) // Platform commission percentage
  earnings        Float    @default(0)  // Total earnings
  services        Service[]
  availability    Availability[]
  bookings        Booking[]
  posts           BlogPost[]
}

model Service {
  id               String         @id @default(cuid())
  dentistProfileId String
  dentistProfile   DentistProfile @relation(fields: [dentistProfileId], references: [id], onDelete: Cascade)
  name             String
  price            Int
  duration         Int
  isPaid           Boolean        @default(false)  // Mark as paid service
}

model Availability {
  id               String         @id @default(cuid())
  dentistProfileId String
  dentistProfile   DentistProfile @relation(fields: [dentistProfileId], references: [id], onDelete: Cascade)
  dayOfWeek        Int            // 0-6 (Sunday-Saturday)
  startTime        String         // e.g., "09:00"
  endTime          String         // e.g., "17:00"
}

model Booking {
  id               String         @id @default(cuid())
  patientId        String
  patient          User           @relation(fields: [patientId], references: [id])
  dentistProfileId String
  dentistProfile   DentistProfile @relation(fields: [dentistProfileId], references: [id])
  serviceName      String
  price            Int            @default(0)
  date             DateTime
  status           String         @default("PENDING") // PENDING, CONFIRMED, CANCELLED
  paymentStatus    String         @default("PENDING") // PENDING, COMPLETED, FAILED
  stripePaymentId  String?        @unique            // Stripe Payment Intent ID
  commissionAmount Float          @default(0)        // Commission amount (â‚¬)
  createdAt        DateTime       @default(now())
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BlogPost {
  id               String         @id @default(cuid())
  dentistProfileId String
  dentistProfile   DentistProfile @relation(fields: [dentistProfileId], references: [id], onDelete: Cascade)
  title_en         String
  title_el         String
  content_en       String
  content_el       String
  image            String?
  category         String         @default("Advice") // Advice, Case Study, Technology, News
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  published        Boolean        @default(true)
  slug             String         @unique
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
